<Window x:Class="WPF4fromBookbon4.MaxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF4fromBookbon4"
        mc:Ignorable="d"
        Title="MaxWindow" Height="450" Width="800" ResizeMode="NoResize" Activated="Window_Activated">
    <Grid>
        <Label Content="Enter the number"/>
        <TextBox Name="txtMax" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center"
                 Margin="466,10,0,0" Height="132" Width="214" RenderTransformOrigin="1.472,0.786"/>

        <Button Name="btnMaxOK" Width="60" Content="MaxbtnOK" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="140,40,0,0" Click="btnMaxOk_Click"/>


        <Button Name="btnMaxCancel" Width="60" Content="MaxbtnCancel" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="50,40,0,0" Click="btnMaxCancel_Click"/>


    </Grid>
</Window>
